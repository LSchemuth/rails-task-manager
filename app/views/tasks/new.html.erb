<h1>New task form</h1>

<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, placeholder: "Add a task title" %>
  <br>
  <br>
  <%= f.label :details %>
  <%= f.text_field :details, placeholder: "Add a task description"%>
  <br>
  <br>
  <%= f.label :completed %>
  <%= f.check_box :completed, placeholder: "Is the task completed?" %>
  <br>
  <br>
  <%= f.submit %>
<% end %>
<br>
<%= link_to "Go back to all tasks", tasks_path %>
